<h1>Become a New Heroine</h1>

<ul>
<%= form_for @heroine do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %><br>
    
    <%= f.label :power %>
    <%= f.collection_check_boxes :power_ids, Power.all, :id, :name %><br>

    <%= f.submit %>
    <% end%>

</ul>
<% if @heroine.errors.any? %>
    <div id="error_explanation">
    <%= pluralize(@heroine.errors.count, "error") %>
    
    <ul> 
    <% @heroine.errors.full_messages.each do |m| %>
         <%= m %><br> 
        <% end %>
    </ul>
    </div>
    <% end %>