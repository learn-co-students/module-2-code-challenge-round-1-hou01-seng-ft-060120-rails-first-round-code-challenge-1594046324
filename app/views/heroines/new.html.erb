<h1>Create a New Heroine</h1>

<%= form_for @heroine do |f|%>
    <%=f.label :name%><br>
    <%=f.text_field :name%><br>
    <br>
    <%=f.label :super_name%><br>
    <%=f.text_field :super_name%><br>
    <br>
    <%= f.collection_select(:power_id, @powers, :id, :name)%>
    <br>
    <%=f.submit%>
   <% if @heroine.errors.any?%>
    <ul>
       <h2>Errors: </h2>
         <% @heroine.errors.full_messages.each do |message|%>
             <li><%=message%></li>
            <%end%>
        </ul>
     <%end%>
<% end %>