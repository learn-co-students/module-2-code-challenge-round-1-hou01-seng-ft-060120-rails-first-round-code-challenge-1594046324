<h1>New Heroine</h1>

<% if @heroine.errors.any? %>
    <ul>
        <% @heroine.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <br>
    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %><br>
    <br>
    <%= f.label :power %><br>
    <%= f.collection_select :id, Power.all, :id, :name, prompt: true %><br>
    <br>
    <%= f.submit %>
<% end %>